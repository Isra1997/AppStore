<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">      
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> 
        <link rel="stylesheet" type="text/css"  href="CSS/uploadpage.css"> 
    </head>
    <body> 
       <!-- navbar -->
       <% include ../partials/navbar%>
        <br>
      <div class="container">
          <!-- start -->
          <div class="row">
         <% for(var i=0;i<fileImageArray.length;i++){%>
             
            <div class="col-md-4" name="clickz" id='<%= i%>'>
                <div class="jumbotron">  
                        <img src="/ImagesUploaded/<%= fileImageArray[i]%>" class="img-fluid" name="imgvendor<%=i%>">
                        <!-- The Modal -->
                        <div id="myModal<%=i%>" class="modal+">
                            <!-- The Close Button -->
                            <span class="close">&times;</span>
                        
                            <!-- Modal Content (The Image) -->
                            <img class="modal-content" id="img+<%=i%>">
                        
                            <!-- Modal Caption (Image Text) -->
                            <div id="caption<%=i%>"></div>
                        </div>
                    <hr>
                    <div class="mx-aut0">
                            <form action="/download/<%=i%>" method="post">
                            <button  class="btn btn-outline-success btn-lg btn-block" name='download' type="submit"><i class="fa fa-download"></i> Download</button>
                            </form>
                    </div>
                </div>
            </div>
        <%}%>
        <!-- end -->
        </div>
            </div>
          </div>
      </div>
      <% include ../partials/footer %>
      <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
      <script>
          $('#clickz').click(function(){
            var id=$(this).attr(data-id);

            var model=document.getElementById('myModal'+id);
            var img=document.getElementsByName('imgvendor'+id);
            var modelimg=document.getElementsByName('img'+id);
            var caption=document.getElementsByName('caption'+id);

            model.style.display="block";
            modelimg.src=img.src;
            var id1=$(this).attr(data-id);
            caption.innerHTML="Uploaded by:<%= NameArray[id1]%>/n"+"Vendor Name:<%= VendorName[id1]%>";

            var span = document.getElementsByClassName("close")[0];

            // When the user clicks on <span> (x), close the modal
            span.onclick = function() { 
            modal.style.display = "none";
        }
          })
      </script>
    </body>
</html>